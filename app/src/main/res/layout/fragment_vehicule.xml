<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
            android:background="@color/grey_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:padding="@dimen/spacing_large">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DETAILS VEHICULES"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@color/grey_80"
            app:fontFamily="sans-serif-medium" />

        <View
            android:layout_width="@dimen/spacing_middle"
            android:layout_height="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/numvehicule"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/grey_60"
            app:fontFamily="sans-serif-medium" />

        <EditText
                android:id="@+id/idacc"
            android:background="@drawable/edit_text_round_bg_white"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_middle"
            android:hint="11"
            android:minHeight="@dimen/spacing_xmlarge"
            />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/plate"
                android:layout_marginTop="@dimen/spacing_middle"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/grey_60"
                app:fontFamily="sans-serif-medium" />

        <EditText
                android:id="@+id/plate"
                android:background="@drawable/edit_text_round_bg_white"
                android:hint="LT980R"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_middle"
                android:minHeight="@dimen/spacing_xmlarge"
        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/anneevehicule"
                android:layout_marginTop="@dimen/spacing_middle"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/grey_60"
                app:fontFamily="sans-serif-medium" />

        <EditText
                android:id="@+id/annee"
                android:background="@drawable/edit_text_round_bg_white"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_middle"
                android:hint="1999"
                android:minHeight="@dimen/spacing_xmlarge"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cylindree"
                android:layout_marginTop="@dimen/spacing_middle"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/grey_60"
                app:fontFamily="sans-serif-medium" />

        <EditText
                android:id="@+id/cylindre"
                android:background="@drawable/edit_text_round_bg_white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_middle"
                android:hint="1999"
                android:minHeight="@dimen/spacing_xmlarge"
        />

        <TextView
                android:layout_marginBottom="@dimen/spacing_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/marquevehicule"
                android:layout_marginTop="@dimen/spacing_middle"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/grey_60"
                app:fontFamily="sans-serif-medium" />

        <Spinner
                android:id="@+id/marquespinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_round_spinner_white"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_middle"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="@dimen/spacing_small"
                android:layout_weight="1">

                <TextView
                        android:layout_marginBottom="@dimen/spacing_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/typevehicule"
                        android:layout_marginTop="@dimen/spacing_middle"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="@color/grey_60"
                        app:fontFamily="sans-serif-medium" />
    

                <Spinner
                        android:background="@drawable/edit_text_round_spinner_white"
                        android:id="@+id/vehicletypespinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />


            </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:layout_margin="@dimen/spacing_small"
               android:layout_weight="1">
               <TextView
                       android:layout_marginBottom="@dimen/spacing_medium"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="@string/modelevehicule"
                   android:layout_marginTop="@dimen/spacing_middle"
                   android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                   android:textColor="@color/grey_60"
                   app:fontFamily="sans-serif-medium" />

               <Spinner
                       android:background="@drawable/edit_text_round_spinner_white"
                       android:id="@+id/modelspinner"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content" />


           </LinearLayout>

       </LinearLayout>



        <TextView
                android:layout_marginBottom="@dimen/spacing_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fonctionvehicule"
            android:layout_marginTop="@dimen/spacing_middle"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/grey_60"
            app:fontFamily="sans-serif-medium" />

        <Spinner
                android:background="@drawable/edit_text_round_spinner_white"
                android:id="@+id/functionvehiclespinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        <TextView
                android:layout_marginBottom="@dimen/spacing_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/manoeuvrevehicule"
            android:layout_marginTop="@dimen/spacing_middle"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/grey_60"
            app:fontFamily="sans-serif-medium" />

        <Spinner
                android:background="@drawable/edit_text_round_spinner_white"
                android:id="@+id/manoeuvrevehicule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />



        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_margin="@dimen/fab_margin"
                app:rippleColor="@color/white"
                app:srcCompat="@drawable/ic_check" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>