<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ditros.mcd">

    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS"/>
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.MANAGE_ACCOUNTS" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <uses-permission android:name="android.permission.READ_SYNC_SETTINGS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" android:maxSdkVersion="22"/>
    <uses-permission android:name="android.permission.WRITE_SYNC_SETTINGS" />


    <application
        android:allowBackup="true"
        android:usesCleartextTraffic="true"
        android:icon="@mipmap/img_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/img_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.Mcd">
        <provider
                android:name="androidx.core.content.FileProvider"
                android:authorities="${applicationId}.provider"
                android:exported="false"
                android:grantUriPermissions="true">
            <meta-data
                    android:name="android.support.FILE_PROVIDER_PATHS"
                    android:resource="@xml/provider_paths" />
        </provider>


        <activity
                android:name=".MainActivity"
                android:label="@string/app_name"
                android:theme="@style/Theme.Mcd.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="com.ditros.mcd"/>
            </intent-filter>
        </activity>

        <provider
                android:name=".provider.SampleContentProvider"
                android:authorities="com.ditros.mcd"
                android:exported="true"
                android:permission="com.ditros.mcd.READ_WRITE" />

        <activity
                android:name=".TransparentActivity"
                android:theme="@style/Theme.Transparent" >
        </activity>

        <activity
                android:name=".item_vehicule">
        </activity>
        <activity
                android:name=".DrawViewActivity">
        </activity>
        <activity
                android:name=".verbalprocess">
        </activity>
        <activity
                android:name=".generatepv">
        </activity>

        <service
                android:name=".syncs.SyncService"
                android:exported="true">
            <intent-filter>
                <action android:name="android.content.SyncAdapter" />
            </intent-filter>

            <meta-data
                    android:name="android.content.SyncAdapter"
                    android:resource="@xml/sync_adapter" />
        </service>
        <service
                android:name=".Authenticator.AccountauthenticatorService"
                android:process=":auth">
        <intent-filter>
            <action android:name="android.accounts.AccountAuthenticator" />
        </intent-filter>

        <meta-data
                android:name="android.accounts.AccountAuthenticator"
                android:resource="@xml/authenticator" />
        </service>

        <activity android:name=".login"/>
        <activity android:name=".GetAccidentData"/>
        <activity android:name=".item_usager"/>
        <activity android:name=".palette.MainActivity"/>

    </application>

</manifest>